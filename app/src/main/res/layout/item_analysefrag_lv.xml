<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/item_analysefrag_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/other"/>
    <TextView
        android:id="@+id/item_analysefrag_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_analysefrag_iv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_analysefrag_tv_pert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="22.3%"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/item_analysefrag_tv_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥ 100"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>